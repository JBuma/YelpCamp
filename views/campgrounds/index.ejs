<% include ../partials/header%>
<div class="container">
    <div class="jumbotron">
        <% if (!currentUser){ %>
            <h1>Welcome to YelpCamp!</h1>
        <% }else{ %>
            <h1>Welcome to YelpCamp, <%= currentUser.username %>!</h1>
        <% } %>
        <p>View the best campgrounds in the world.</p>
        <a href="/campgrounds/new" class="btn btn-large btn-primary">Add a New Campground</a>
    </div>
    
    
<div class="row">
        <div class="col-lg-12">
            <h3>Our Most popular campgrounds</h3>
        </div>
    <% campgrounds.forEach(function(campground){ %>
            <div class="col-6 col-sm-4 col-md-4 col-lg-3 campPost">
                <a href="/campgrounds/<%= campground._id %>" class="">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="text-center"><%=campground.name %></h3>
                            <img class="img-fluid" src='<%=campground.image%>'>
                        </div>
                    </div>
                </a>
            </div>
    <% });%>
</div>
</div>

<% include ../partials/footer %>